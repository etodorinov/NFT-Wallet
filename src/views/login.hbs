<div class="page-heading normal-space">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h6>Liberty NFT Market</h6>
                <h2>Login to your account.</h2>
                <div class="buttons">
                    <div class="main-button">
                        <a href="/business/all">Explore Our Items</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="item-details-page">
    <div class="container">
        {{#if error}}
        <div>
            <div class="errorContainer">
                <p>{{error.message}}</p>
            </div>
        </div>
        {{/if}}
        
        <div class="row">
            <div class="col-lg-12">
                <div class="section-heading">
                    <div class="line-dec"></div>
                    <h2>Login to <em>Your Account</em> Here.</h2>
                </div>
            </div>
            <div class="col-lg-12">
                <form id="contact" action="" method="post">
                    <div class="row">
                        <div class="col-lg-4">
                            <fieldset>
                                <label for="username">username</label>
                                <input type="username" name="username" id="title" placeholder="Ex. user"
                                    autocomplete="on" required>
                            </fieldset>
                        </div>
                        <div class="col-lg-4">
                            <fieldset>
                                <label for="password">password</label>
                                <input type="password" name="password" id="username" placeholder="******"
                                    autocomplete="on" required>
                            </fieldset>
                        </div>
                        <div class="col-lg-8">
                            <fieldset>
                                <button type="submit" id="form-submit" class="orange-button">Login</button>
                            </fieldset>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>