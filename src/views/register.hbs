<div class="page-heading normal-space">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h6>Liberty NFT Market</h6>
                <h2>Register your account.</h2>
                <div class="buttons">
                    <div class="main-button">
                        <a href="/business/all">Explore Our Items</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="item-details-page">
    <div class="container">
        {{#if error}}
        <div>
            <div class="errorContainer">
                <p>{{error.message}}</p>
            </div>
        </div>
        {{/if}}

        <div class="row">
            <div class="col-lg-12">
                <div class="section-heading">
                    <div class="line-dec"></div>
                    <h2>Register <em>Your Account</em> Here.</h2>
                </div>
            </div>
            <div class="col-lg-12">
                <form id="contact" action="" method="post">
                    <div class="row">
                        <div class="col-lg-4">
                            <fieldset>
                                <label for="username">username</label>
                                <input type="username" name="username" id="title" placeholder="Ex. user"
                                    autocomplete="on" value="{{information.username}}" required>
                            </fieldset>
                        </div>
                        <div class="col-lg-4">
                            <fieldset>
                                <label for="email">email</label>
                                <input type="email" name="email" id="description" placeholder="Ex. email@domain.domain"
                                    autocomplete="on" value="{{information.email}}" required>
                            </fieldset>
                        </div>
                        <div class="col-lg-4">
                            <fieldset>
                                <label for="password">password</label>
                                <input type="password" name="password" id="username" placeholder="******"
                                    autocomplete="on" required>
                            </fieldset>
                        </div>
                        <div class="col-lg-6">
                            <fieldset>
                                <label for="password">repeat password</label>
                                <input type="password" name="rePassword" id="price" placeholder="******"
                                    autocomplete="on" required>
                            </fieldset>
                        </div>
                        <div class="col-lg-8">
                            <fieldset>
                                <button type="submit" id="form-submit" class="orange-button">Register</button>
                            </fieldset>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>